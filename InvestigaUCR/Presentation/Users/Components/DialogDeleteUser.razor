@*
    PIIB22II02-476 MC-PL-3.3 Delete user | PIIB22II02-1315 Show delete button and Add functionality for delete user.
*@

<MudDialog>
    <DialogContent>
        <MudText>@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancelar</MudButton>
        <form class="top-row" method="post" action="Identity/Account/Manage/DeletePersonalData">
            <MudButton Color="@Color" ButtonType="ButtonType.Submit" Variant="Variant.Filled" OnClick="Submit">@ButtonText</MudButton>
        </form>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance? MudDialog { get; set; }

    [Parameter] public string? ContentText { get; set; }

    [Parameter] public string? ButtonText { get; set; }

    [Parameter] public Color Color { get; set; }

    void Submit() => MudDialog!.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog!.Cancel();
}
