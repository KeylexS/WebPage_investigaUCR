@page
@model LoginService
<!DOCTYPE html>
@{
    ViewData["Title"] = "Log in";
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link type="text/css" rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" integrity="sha256-h20CPZ0QyXlBuAw7A+KluUYx/3pK+c7lYEpqLTlxjYQ=" crossorigin="anonymous" />
    <link rel="stylesheet" href="\css\LoginStyle.css" />
    <title>Iniciar Sesion</title>
</head>
<body>
    <div class="login-page">
        <div class="form">
            <section>
                <img src="\Images\Logos\logo-login.svg" class="image-logo" data-src-small="\Images\Logos\logo-login.svg" id="logo" alt="Logo">
                <form class="login-form" id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" id="Email" class="form-control" autocomplete="email" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label">Correo</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Password" id="Contrasena" class="form-control" autocomplete="contraseña" aria-required="true" />
                        <span id=ojo onclick="myFunction(this)" class="fa fa-fw fa-eye password-icon show-password"></span>
                        <label asp-for="Input.Password" class="form-label">Contraseña</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <a id="forgot-password" class="forgotPwd" asp-page="./ForgotPassword">¿Ha olvidado su contraseña?</a>
                    <div>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Iniciar Sesión</button>
                    </div>
                    <div>
                        <a asp-page="./Register" class="registerButtom" asp-route-returnUrl="@Model.ReturnUrl">Registrarse</a>
                    </div>
                </form>
            </section>
        </div>
    </div>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script>
    jQuery('#ojo').on('click', function () {
        jQuery('#Contrasena').attr('type', function (index, attr) {
            return attr == 'text' ? 'password' : 'text';
        })
    })
</script>
<script>
    function myFunction(x) {
        x.classList.toggle("fa-eye-slash");
    }
</script>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}